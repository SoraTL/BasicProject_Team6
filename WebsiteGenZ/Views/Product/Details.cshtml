                        <p class="description">
                            @Model.product.Description
                            <span class="more">more...</span>
                        </p>

                        <div class="actions">
                            <button class="wishlist-btn">Add to Wishlist</button>
                            
                            <form method="post" action="/Cart/AddToCart" class="add-to-cart-form">
                                <input type="hidden" name="productId" value="@Model.product.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button class="cart-btn" asp-action="AddToCart" asp-controller="Cart">Add to Cart</button>
                            </form>
                        </div>

                        <div class="additional-info">
                            <div class="info-item">
                                <i class="fa-solid fa-truck"></i>
                                <div>
                                    <p>Free Delivery</p>
                                    <span>1-2 day</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fa-solid fa-store"></i>
                                <div>
                                    <p>In Stock</p>
                                    <span>Today</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fa-solid fa-shield"></i>
