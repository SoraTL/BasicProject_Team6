@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/css/forgot-password.css">
    <script src="https://kit.fontawesome.com/385d797bd0.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <!-- Left Side with Background Image -->
        <div class="left-section">
            <img src="~/media/backgrounds/background-fortgetpassword.jpg" alt="Background" class="background-image">
        </div>

        <!-- Right Side with Forgot Password Form -->
        <div class="right-section">
            <div class="forgot-password-form">
                <a class="back-link" asp-action="Login" asp-controller="Account"><i class="fas fa-arrow-left"></i> Back</a>
                <h2>Forgot Password</h2>
                <p>Enter your registered email address. We'll send you a code to reset your password.</p>
                <form action="#">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" id="email" placeholder="robertfox@example.com" required>
                    <button type="submit" class="send-otp-button">Send</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
