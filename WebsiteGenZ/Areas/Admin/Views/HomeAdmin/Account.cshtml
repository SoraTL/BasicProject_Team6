@model IEnumerable<WebsiteGenZ.Models.AppUser>

@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Product Management</h1>
            </div>
            <a href="/Admin/AddNewProduct" class="btn">Create New</a>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>

                            <td style=" word-wrap: break-word; overflow-wrap: break-word;white-space: normal;">
                                <button type="button" class="btn btn-gradient-primary btn-fw" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                                <button type="button" class="btn btn-gradient-primary btn-fw" asp-action="Details" asp-route-id="@item.Id">Details</button>
                                <button type="button" class="btn btn-gradient-primary btn-fw" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>


